admin_variables=
{
	admin_credentials="admin:admin;radmin:radmin"
	mysql_ifaces="0.0.0.0:6032"
}

mysql_servers =
(
    { address="service_currency_db_primary", port=3306, hostgroup=1, max_connections=300 }
)

mysql_users =
(
    { username="gacha_test_user", password="gacha_test_password", default_hostgroup=1, max_connections=300 }
)

mysql_query_rules =
(
    { rule_id=1, active=1, match_pattern=".*", destination_hostgroup=1, apply=1 }
)

mysql_variables=
{
	threads=4
	max_connections=2048
	default_query_delay=0
	default_query_timeout=36000000
	have_compress=true
	poll_timeout=2000
	interfaces="0.0.0.0:6033"
	default_schema="information_schema"
	stacksize=1048576
	server_version="5.5.30"
	connect_timeout_server=3000
	monitor_username="monitor"
	monitor_password="monitor"
	monitor_history=600000
	monitor_connect_interval=60000
	monitor_ping_interval=60000
	monitor_read_only_interval=1500
	monitor_read_only_timeout=500
	ping_interval_server_msec=120000
	ping_timeout_server=500
	commands_stats=true
	sessions_sort=true
	connect_retries_on_failure=10

    ssl_p2s_key="/etc/proxysql/ssl/server-key.pem"
    ssl_p2s_cert="/etc/proxysql/ssl/server-cert.pem"
    ssl_p2s_ca="/etc/proxysql/ssl/ca-cert.pem"
}